# SonarQube Analysis Agent - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SonarQube Configuration
# =============================================================================

# SonarQube server URL (without trailing slash)
SONARQUBE_URL=https://sonarqube.company.com

# SonarQube API token (with permissions: Browse, Administer Issues, See Source Code)
# Generate at: https://sonarqube.company.com/account/security/
SONARQUBE_TOKEN=squ_your_token_here

# Comma-separated list of project keys to monitor
SONARQUBE_PROJECTS=my-backend-service,payment-api,user-service

# =============================================================================
# GitHub Configuration
# =============================================================================

# GitHub Personal Access Token
# Required scopes: repo, pull_requests, contents:write
# Generate at: https://github.com/settings/tokens/new
GITHUB_TOKEN=ghp_your_token_here

# Comma-separated list of repositories (owner/repo format)
GITHUB_REPOS=myorg/backend-service,myorg/payment-api

# =============================================================================
# Ollama Configuration
# =============================================================================

# Ollama server URL
# Use http://ollama:11434 if running via docker-compose
# Use http://localhost:11434 if running Ollama locally
OLLAMA_HOST=http://ollama:11434

# =============================================================================
# Agent Behavior Configuration
# =============================================================================

# Poll interval in seconds (how often to check for new findings)
POLL_INTERVAL=300

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Automatically create pull requests for fixes (true/false)
AUTO_CREATE_PR=true

# Automatically mark false positives as "won't fix" (true/false)
AUTO_MARK_FP=true

# Dry run mode - analyze but don't make changes (true/false)
DRY_RUN=false

# =============================================================================
# Optional: Notifications (if enabled in config)
# =============================================================================

# Slack/Teams webhook URL for notifications
# NOTIFICATION_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
